{
  "name": "chesslock",
  "version": "1.6.0",
  "description": "Chess.com kiosk mode app for macOS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac"
  },
  "keywords": [
    "chess",
    "kiosk",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.chesslock.app",
    "productName": "ChessLock",
    "mac": {
      "category": "public.app-category.games",
      "icon": "img/logo.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        },
        {
          "target": "zip",
          "arch": ["universal"]
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "clickagree",
      "repo": "ChessLock"
    }
  }
}
